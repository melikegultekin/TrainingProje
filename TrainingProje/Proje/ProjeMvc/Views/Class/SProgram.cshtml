@using Entities.Concrete
@model List<Class>

@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        @*<h2>Hoşgeldiniz @ViewBag.username</h2>*@
        <!-- Trigger the modal with a button -->
        <br />

        @if (TempData["AlertMessage"] != null)
        {
            <div class="alert alert-success">
                <strong>Mesajınız!</strong>@TempData["AlertMessage"]
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                    @*<span>x</span>*@
                </button>
            </div>
        }

        <div class="p-5 w-100 m-0">
            <!--burada Add viewine yönlendirme yaptık-->

            <a href="/Educator/GetAll" class="btn btn-success">Geri Dön</a>
        </div>
        <br />
        <br />
        <br />
        <br />
        <table class="table table-bordered">
            <tr>
                <th><b>Tüm Sınıflar</b></th>
            </tr>
            <!--Model içindeki her item için döngü dönecek ve değerleri tabloya yazılacak-->
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.ClassName</td>

                    <td><a href="/Training/Program?TrainingId=@item.ClassId" class="btn btn-danger">Programı Gör</a></td>

                </tr>

            }
        </table>
    </div>
    <br />
    <br />
</body>
</html>


