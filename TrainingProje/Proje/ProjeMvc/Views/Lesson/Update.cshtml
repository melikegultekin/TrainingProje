@model Entities.Concrete.Lesson

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/js/site.js"></script>
<h1>Ders Güncelle</h1>
<br />
<div class="content" style="width: 400px; margin-left: 35%; margin-bottom: 10%; margin-top:5%">
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-danger">
            <strong>Uyarı!</strong>@TempData["AlertMessage"]
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
                @*<span>x</span>*@
            </button>
        </div>
    }
    <div class="col-md-12">
        <div class="card">
            <div class="card-header"><h5 class="title">Güncelle</h5></div>
            <div class="card-body">
                @using (Html.BeginForm("Update", "Lesson", FormMethod.Post))
                {
                <div class="form-group">
                    @Html.Label("Dersin Adı:")<br />
                    @Html.TextBoxFor(x => x.LessonName, new { autocomplete = "off" })<br />
                    @*@Html.DropDownListFor(x => x.TitleName, (List<SelectListItem>)ViewBag.Unvan, "Seçiniz", new { @class = "form-control" })<br />*@
                    @Html.ValidationMessageFor(x => x.LessonName, "", new { @class = "text-danger" })
                    <br /><br />
                    <input type="hidden" name="LessonId" value="@Model.LessonId" />
                    <input type="hidden" name="TrainingId" value="@Model.TrainingId" />
                    @*<td><a href="/Class/Update?ClassId=@Model.ClassId" class="btn btn-primary">Güncelle</a></td>*@
                    <button>Güncelle</button>

                </div>
                }
                <a href="/Lesson/GetAll" class="btn btn-success">Geri Dön</a>
            </div>
            @*<script type="text/javascript">
                    $(function () {
                        $('#datetimepicker1').datetimepicker();
                    });
                </script>*@

        </div>
    </div>
</div>







