@model Entities.DTOs.TitleDetailDto
@*@using Entities.DTOs

    @model Tuple<SiteDetailDto,SiteAddDetailDto>*@

@{
    ViewData["Title"] = "Unvan Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/js/site.js"></script>
<link href="~/jquery-ui-1.11.4/jquery-ui.min.bootstrap.css" rel="stylesheet" />

<h1>Unvan Ekle</h1>


<div class="content" style="width: 400px; margin-left: 35%; margin-bottom: 10%; margin-top:5%">
    @*<a href="/Educator/GetAll" class="btn btn-success">Geri Dön</a>
    <br />*@
    <div class="col-md-12">

        <div class="card">

            <div class="card-header"><h5 class="title">Unvan Ekle</h5></div>
            <div class="card-body">
                @using (Html.BeginForm("Add", "Title", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Unvan İsmi:")<br />
                        @Html.TextBoxFor(x => x.TitleName, new { autocomplete = "off" })<br />
                        @Html.ValidationMessageFor(x => x.TitleName, "", new { @class = "text-danger" })
                       
                        <br /><br />
                        @*<input type="submit" value="Ekle"
                            onclick="window.location='/Site/GetAll';" />*@
                        <button>Ekle</button>

                    </div>
                }

            </div>

        </div>
    </div>
</div>
